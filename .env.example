# ViralVibe SaaS - Environment Variables Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# SUPABASE (Database & Auth)
# =============================================================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_SERVICE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
DATABASE_URL=postgresql://postgres:password@db.your-project.supabase.co:5432/postgres

# =============================================================================
# API BACKEND (FastAPI)
# =============================================================================
API_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=true
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# =============================================================================
# NEXT.JS FRONTEND
# =============================================================================
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# =============================================================================
# CELERY & REDIS (Task Queue)
# =============================================================================
REDIS_URL=redis://localhost:6379
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# =============================================================================
# MODAL (GPU Video Processing)
# =============================================================================
MODAL_TOKEN_ID=your-modal-token-id
MODAL_TOKEN_SECRET=your-modal-token-secret
MODAL_ENVIRONMENT=main

# =============================================================================
# AWS S3 (Video Storage)
# =============================================================================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=viralvibe-videos
AWS_S3_REGION=us-east-1
AWS_S3_SIGNED_URL_EXPIRY=86400

# =============================================================================
# OPENAI (LLM for Hook Extraction)
# =============================================================================
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4o

# =============================================================================
# HUGGING FACE (Optional: For open-source models)
# =============================================================================
HUGGINGFACE_TOKEN=hf_...

# =============================================================================
# REMOTION (Video Rendering)
# =============================================================================
REMOTION_WEBHOOK_SECRET=your-webhook-secret
REMOTION_LICENSE_KEY=your-remotion-license-key

# =============================================================================
# MONITORING & LOGGING (Optional)
# =============================================================================
SENTRY_DSN=https://...@sentry.io/...
LOG_LEVEL=INFO

# =============================================================================
# STRIPE (Payment Processing - Optional for paid tiers)
# =============================================================================
STRIPE_PUBLIC_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
NODE_ENV=development
PYTHON_ENV=development
DEBUG=true
